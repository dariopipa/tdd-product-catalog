<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
	<persistence-unit name="product-catalog-IM-PU"
		transaction-type="RESOURCE_LOCAL">

		<class>io.github.dariopipa.tdd.catalog.entities.Category</class>
		<class>io.github.dariopipa.tdd.catalog.entities.Product</class>

		<properties>


			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:h2:mem:tdd_product_catalog_memory;MODE=PostgreSQL" />
			<property name="jakarta.persistence.jdbc.user" value="" />
			<property name="jakarta.persistence.jdbc.password" value="" />
			<property name="jakarta.persistence.jdbc.driver"
				value="org.h2.Driver" />

			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />


		</properties>
	</persistence-unit>
</persistence>
